<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="그룹목록"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/grouplist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:id="@+id/grouplisttxt"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:hint="참여한 그룹이 없습니다."-->
<!--                android:layout_gravity="center"-->
<!--                android:gravity="center"-->
<!--                android:textColorHint="#868e96"-->
<!--                android:textSize="18dp"/>-->
        </LinearLayout>
    </ScrollView>
    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <android.widget.Button
        android:id="@+id/btn_popup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/first_activity_custombtn_black"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="15dp"
        android:onClick="mOnCreatePopupClick"

        android:text="그룹 생성"/>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/first_activity_custombtn_white"
        android:textFontWeight="600"
        android:textSize="15dp"
        android:onClick="mOnJoinPopupClick"
        android:text="그룹 참가"/>
    
</LinearLayout>